<form action="/register" method="POST">
  <div class="container">
    <h1>Register</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>
    <label for="email"><b>First name</b></label><br>
    <input type="text" class="form-control" placeholder="First name" name="fname" required><br>
    <label for="email"><b>Last name</b></label><br>
    <input type="text" class="form-control" placeholder="Last name" name="lname" required><br>
    <label for="email"><b>Email</b></label><br>
    <input type="text" class="form-control" placeholder="Enter Email" name="email" required><br>
    <label for="psw"><b>Password</b></label><br>
    <input type="password" class="form-control" placeholder="Enter Password" name="password" required>
    <input type="hidden" name="role" value="user">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div class="clearfix">
      <input type="submit" class="cancelbtn" value="Submit">
    </div>
  </div>
</form>
