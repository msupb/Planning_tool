{{#data}}
  <h1>{{plan_name}}</h1>
  <p>{{description}}</p>
{{/data}}
<h2>Activities</h2>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <td>Activity</td>
    </tr>
  </thead>
  <tbody>
    {{#each activity}}
      <tr>
        <td>
          <h3>{{activity_name}}</h3>
          <p>{{comment}}</p>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
